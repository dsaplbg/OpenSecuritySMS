<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/photoContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:contentDescription="@string/descriptionPhotoContact" />

        <TextView
            android:id="@+id/nameContact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/photoContact"
            android:layout_alignTop="@id/photoContact"
            android:text="John Doe"
            android:textSize="@dimen/material_text_title"/>

        <TextView
            android:id="@+id/latestMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum"
            android:singleLine="true"
            android:layout_alignBottom="@+id/photoContact"
            android:layout_toEndOf="@+id/photoContact"
            android:textSize="@dimen/material_text_body2" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nameContact"
            android:layout_alignTop="@id/nameContact"
            android:text="20/01/2016"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/material_text_caption" />
</RelativeLayout>