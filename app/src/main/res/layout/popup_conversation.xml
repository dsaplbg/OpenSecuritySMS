<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/popupContact"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/popupContactImage" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popupContactImage"
        android:layout_alignParentRight="true" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/popupMessage"
        android:layout_below="@+id/popupContactImage" />

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupMessage"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter text here"
            android:inputType="textMultiLine|textCapSentences|textLongMessage|textAutoCorrect"
            android:ems="10"
            android:scrollbarSize="@dimen/activity_vertical_margin"
            android:id="@+id/popupTextSend"
            android:maxLines="3"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/popupSend"
            android:allowUndo="true"
            android:layout_below="@+id/popupMessage" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/popupSend"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/popupMessage" />

</RelativeLayout>